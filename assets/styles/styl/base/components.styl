// Flyout Directions (positioning and caret styles)

flyout-axis($axis) {
  if ($axis == x) {
    $pull-direction = top;
  }

  if ($axis == y) {
    $pull-direction = left;
  }

  .flyout-modal {
    {$pull-direction}: 50%;
  }

  .flyout-modal,
  .flyout-align-caret {
    &:before,
    &:after {
      {$pull-direction}: 0;
      {opposite-position($pull-direction)}: 0;

      margin: auto;
    }
  }
}

flyout-direction($direction) {
  if ($direction == right) {
    $rotation = -135deg;
  } else if ($direction == left) {
    $rotation = 45deg;
  } else if ($direction == top) {
    $rotation = 135deg;
  } else if ($direction == bottom) {
    $rotation = -45deg;
  }

  $opposite = opposite-position($direction);

  .flyout-modal {
    {$opposite}: 100%;

    margin-{$opposite}: 14px;
  }

  .flyout-modal,
  .flyout-align-caret {
    &:before, &:after {
      {$direction}: 100%;
    }

    &:before {
      margin-{$direction}: -9px;

      transform: rotate($rotation);

      .no-boxshadow & {
        margin-{$direction}: 0;
        border-{$direction}-color: $grey-light;
      }
    }

    &:after {
      border-{$direction}-color: $white;
      border-{$direction}-color: rgba(255,255,255,0.96);
    }
  }

  .flyout-backdrop {
    {$direction}: -50px;
  }

  &.active .flyout-modal {
    animation-name: flyout-slide- + $direction;
  }
}

.flyout-top, .flyout-bottom {
  flyout-axis(y);
}

.flyout-right, .flyout-left {
  flyout-axis(x);
}

for $direction in (top right bottom left) {
  .flyout-{$direction} {
    flyout-direction($direction);
  }
}

.flyout-fluid {
  .flyout-modal {
    width: auto;

    white-space: nowrap;
  }
}

