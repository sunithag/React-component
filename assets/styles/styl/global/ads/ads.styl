@import "../modules/MidasSponsoredProducts/MidasSponsoredProducts";

$grey-callout = #999;
$ads-border-color = #ececec;
$ads-header-background = $grey-light;
$ads-header-color = $grey-dark;
$ads-footer-color = $blue;

.ad-block-container {
  padding: 0;
  width: 100%;

  border-bottom: 2px solid $ads-border-color;

  .ad-block-header {
    width: 100%;
    height: 33px;
    padding: 8px;
    margin: 0px;
    border: 2px solid $ads-header-background;
    border-bottom: 0;

    color: $ads-header-color;
    font-size: 14px;
    line-height: 13px;
    background: $ads-header-background;

    .ad-block-title {
      margin: 0;
      padding: 0;
    }
  }

  .ad-block {
    clearfix();

    border: 2px solid $ads-border-color;
    border-top: 0;
  }

  .whats-this-link {
    font-size: 12px;
    color: $blue;

    cursor: pointer;
  }

  .whats-this-top {
    display: block;
    float: right;
  }

  .whats-this-bottom {
    display: none;
  }
}

.ad-modal {
  .modal {
    padding: 40px 30px;
  }
  .semibold {
    font-weight: 600;
  }
}

.sponsored-container-left,
.sponsored-container-right {
  position: relative;
  width: 185px;
  margin: 50px auto;

  .ad-block-container {

    .whats-this-top {
      display: none;
    }

    .whats-this-bottom {
      display: block;
      padding: 20px 10px 10px 10px;
      border: 2px solid $ads-border-color;
      border-top: 0;
      border-bottom: 0;

      text-align: right;
    }
  }

  .ad-block-header {
    text-align: center;
  }

  &.sponsored-display-ad {
    margin: 50px auto 0;
    width: 160px;

    .advertisement-callout {
      width: 100%;
    }
  }
}

.sponsored-display-ad {
  margin: 0;
  padding: 0;
  border: 0;

  box-shadow: none;
  text-align: center;

  .advertisement-callout {
    margin: 0 auto 3px;

    color: $grey-callout;
    font-family: $helvetica;
    font-size: 9px;
    line-height: 1;
    text-align: right;
  }
}

.sponsored-container-middle {
  &.sponsored-display-ad {
    margin: 0 auto;
    width: 728px;
    margin: 25px auto;

    .advertisement-callout {
      width: 728px;
    }
  }
}

.sponsored-container-bottom {
  width: 728px;
  margin: 25px auto;

  &.sponsored-products {
    width: 100%;
    padding: 10px;
  }
}

.sponsored-container-top {
  &.sponsored-display-ad {
    height: 40px;
    margin: 0 auto;

    .advertisement-callout {
      display: none;
    }

    > div {
      margin: 0 auto;
    }
  }

  &.fixed {
    wmzindex("header");

    position: fixed;
    left: 0;
    right: 0;
    top: 50px;

    max-width: none;
    width: 100%;

    animation: header-slide-down 0.3s ease forwards;
    background-color: $white;

    &.close {
      animation: header-slide-up 0.3s ease forwards;
    }
  }
}

.sponsored-container-top-wrapper {
  height: 40px;
  margin-top: 5px;
}

.sponsored-pla-container {
  &.sponsored-container-left .ad-block {
    margin: 0 auto;
    border-bottom-width: 0;

    .pla-ad-block {
      margin: 0 auto;
    }
  }
}

.sponsored-product .tile-heading:after,
.sponsored-product .tile-heading:before {
  display: none;
}

.valueoftheday-page .sponsored-display-ad {
  text-align: center;
}

.search-page, .browse-page, .topic-page {
  &.sponsored-container-middle {
    width: 100%;
    margin: 0;
  }

  &.sponsored-container-left {
    margin-bottom: 5px;
  }
}

.search-page, .browse-page {
  &.sponsored-container-bottom.sponsored-display-ad,
  &.sponsored-container-left.sponsored-display-ad {
    margin-bottom: 5px;
  }

  &.sponsored-products {
    padding: 0 16px;
  }

  .module-sponsored-products {
    background: none;
  }

  .sponsored-products-header {
    padding-left: 0;
  }

  .sponsored-products {
    padding: 0 16px;
  }

  .items {
    margin-left: -10px;
  }
}

.item-page {
  &.sponsored-products {
    width: 100%;

    .sponsored-products-header {
      font-weight: 700;
    }
  }

  &.sponsored-container-bottom {
    width: 944px;

    &.sponsored-display-ad {
      margin-bottom: 15px;
    }
  }

  &.sponsored-container-right.sponsored-display-ad {
    margin: 20px auto 0;
    width: 300px;
  }
}

.category-page, .topic-page {
  &.sponsored-products.sponsored-container-bottom {
    margin-bottom: 25px;
  }

  &.sponsored-container-left {
    margin-bottom: 5px;
  }

  &.sponsored-container-bottom {
    margin: 15px auto;
  }

  &.sponsored-container-middle.sponsored-display-ad {
    margin: 1px auto 50px auto;
  }
}

.category-page {
  &.sponsored-container-middle.sponsored-products {
    width: 100%;
    padding: 10px;
  }
}

.homepage-page {
  .has-featured-image {
    .featured-image {
      width: 330px;
      height: 330px;

      img {
        height: 100%;
        width: 100%;
      }
    }

    .carousel-sponsored-products,
    .items {
      height: 395px;
    }

    .tile-list .tile {
      height: 315px;
      margin: 0 0 0 15px;
    }

    .tile .product-image {
      width: 150px;
      height: 150px;
    }

    .tile .tile-heading {
      max-height: 52px;
    }
  }
}

.topic-page, .search-page, .browse-page {
  .sponsored-products-2-design,
  .sponsored-products-3-design {
    small-sponsored-products-theme();

    .carousel-paginator,
    .paginator-btn {
      display: none;
    }

    .sponsored-products-header {
      padding: 0;
    }

    .carousel-sponsored-products {
      width: 99%;
      height: 200px;
      padding: 20px 0 0 5px;
    }

    .tile {
      margin-left: 5px;
      border: 1px solid $grey-light;
      padding: 10px 5px;

      .stars {
        margin: 10px 0 0 0;
        width: 49%;
        clear: none;
      }
    }

    .sponsored-product {
      position: initial;
      float: left;
      height: 180px;
      width: 50%;

      .price-display {
        width: 49%;
      }

      .tile {
        width: 99%;
      }

      .tile-heading {
        width: 49%;
        min-height: 48px;
        margin: 0;
      }

      .product-image {
        height: 100%;
        width: 150px;
      }
    }
  }

  .sponsored-products-3-design {
    .carousel-sponsored-products {
      height: 180px;
    }

    .sponsored-product {
      width: 33.33%;

      .tile {
        width: 99%;
      }

      .price-display,
      .tile-heading {
        width: 49%;
      }

      .product-image {
        width: 100px;
        height: 100%;
      }

      .stars {
        margin: 10px 118px 0;
      }
    }
  }

  &.sponsored-container-bottom.sponsored-display-ad .advertisement-callout {
    width: 728px;
  }
}

@media (min-width: 1366px) {
  .valueoftheday-page.sponsored-container-top.sponsored-display-ad {
    padding-left: 262px;

    div {
      margin-top: 5px;
    }
  }

  .has-rightrail {
    .sponsored-container-bottom {
      width: 220px;
    }

    .sponsored-container-bottom.sponsored-products {
      position: absolute;
      left: (1366px - 240px);
      margin: 0;
      padding: 0 5px 0 14px;
      width: 240px;
      height: auto;
      border-left: 1px solid $grey-very-light;
      border-bottom-width: 0;
      background: none;

      .sponsored-products-header {
        margin: 0 0 34px 0;
        padding: 7px 0 0 4px;
        font-size: 16px;
      }

      .items {
        margin: 0;
      }

      .module-sponsored-products {
        background: none;
      }

      .carousel-sponsored-products {
        width: 220px;
        height: auto;
        margin: 0;
        padding: 0;
      }

      .paginator-btn,
      .carousel-paginator {
        display: none;
      }

      .sponsored-product {
        position: static;
        width: 200px;
        max-height: 110px;
        margin: 0 0 34px 20px;

        .tile {
          width: 100%;
          height: auto;
          margin: 0;
          padding: 0;
          border: 0;

          &:after {
            display: none;
          }

          .tile-heading {
            float: left;
            width: 123px;
            height: auto;
            max-height: 48px;
            margin: 0;
            overflow: hidden;

            color: $grey-dark;
            font-size: 14px;

            &:before {
              width: 0;
              height: 0px;
            }
          }

          .product-image {
            float: left;
            height: 60px;
            width: 60px;
            margin: 0 8px 0 -9px;
          }

          .price-display {
            float: left;
            width: 97px;
            height: 27px;
            margin: 5px 0;
            padding: 0;

            font-size: 23px;
          }

          .savings {
            display: none;
          }

          .flag {
            top: 0;
          }

          .stars {
            display: block;
            float: left;
            margin: 10px 0 0 68px;
            clear: both;
          }
        }

        &:last-child {
          margin-bottom: 10px;
        }
      }
    }
  }
}
