  .flyout-modal {
    animation: flyout-slide-bottom 0.3s ease forwards;
  }

  &.no-animation .flyout-modal {
    animation: none;
  }
}

.flyout-backdrop {
  wmzindex("basic");

  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

