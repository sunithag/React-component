  text-align: center;
  transition-property: all;
  transition-duration: 0.2s;
  transition-timing-function: ease-out;
  white-space: nowrap;
}

.meter-circle:after {
  content: " ";
  position: absolute;
  top: 0.08em;
  left: 0.08em;

  display: block;
  width: 0.84em;
  height: 0.84em;
  border-radius: 50%;

  background-color: $white;
  transition-duration: 0.2s;
  transition-property: all;
  transition-timing-function: ease-in;
}

.meter-circle-slice {
  position: absolute;

  width: 1em;
  height: 1em;

  clip: rect(0em, 1em, 1em, 0.5em);
}

for $i in (1..100) {
  .meter-circle-p{$i} .meter-circle-bar {
    transform: rotate(unit(360 * $i / 100, deg));
  }
}

/*!
Spinner

The loading spinner can be used standalone or with a `.spinner-backdrop`
wrapper, which adds a semi-transparent white backdrop.

.spinner-small - A small spinner variant.
.spinner-mini - A mini spinner variant.

Styleguide 8.9
*/

.spinner {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  width: 1em;
  height: @width;
  margin: auto;

  animation: spin-clockwise 1.5s linear 0s infinite;
  background-repeat: no-repeat;
  background-position: 0 0;
  font-size: 55px;
}

.spinner-small {
  font-size: 28px;
}

.spinner-mini {
  font-size: 20px;
}

.no-cssanimations .spinner:after {
  content: "";

  display: block;
  width: 100%;
  height: @width;

  background-image: url("/static/img/spinner-empty-point.gif");
}

.no-cssanimations .spinner-small:after {
  background-image: url("/static/img/btn-spinner-empty-point.gif");
}

.no-cssanimations .spinner-mini:after {
  background-image: url("/static/img/btn-spinner-mini-empty-point.gif");
}

.spinner-backdrop {
  wmzindex("spinner-backdrop");

  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  // Use a png with the same values as the below `rgba` for browsers that don't support rgba
  background: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVQIHWP4vx8AAsABvxAEKVEAAAAASUVORK5CYII=");
  background: rgba(255,255,255,0.75);
}

.spinner-backdrop-fixed {
  position: fixed;
}

