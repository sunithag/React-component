.message-list {
  margin: 0;
  padding: 0;

  font-weight: 600;
  list-style: none;
  text-align: right;

  li {
    ellipsis();

    display: none;
    max-width: 400px;

    background-color: $white;
    font-size: 12px;
    line-height: 36px;

    @media (min-width: 1366px) {
      font-size: 14px;
    }

    &:first-child {
      display: block;
    }
  }
}
